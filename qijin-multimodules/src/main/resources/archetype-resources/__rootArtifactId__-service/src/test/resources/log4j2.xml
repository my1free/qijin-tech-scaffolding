<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <properties>
        <property name="log.dir">./logs</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p][%F:%L] - %m%n</Pattern>
            </PatternLayout>
        </Console>
        <RollingRandomAccessFile name="DailyLog" fileName="${log.dir}/${artifactId}.test.log"
                                 filePattern="${log.dir}/${artifactId}.test.log.%d{yyyy-MM-dd}">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} [%-5p][%c{1}] - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>


    <Loggers>
        <Logger name="${package}" level="info" additivity="false">
            <AppenderRef ref="DailyLog"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
